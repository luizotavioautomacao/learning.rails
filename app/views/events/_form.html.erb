<%= form_with(model: event) do |f| %>
  <%= render "shared/errors", object: event %>
  <%= f.label :name, "Nome" %>
  <%= f.text_field :name %>
  <%= f.label :description, "Resumo" %>
  <%= f.text_area :description, rows: 5 %>
  <%= f.label :location, "Local"%>
  <%= f.text_field :location %>
  <%= f.label :price, "PreÃ§o" %>
  <%= f.number_field :price %>
